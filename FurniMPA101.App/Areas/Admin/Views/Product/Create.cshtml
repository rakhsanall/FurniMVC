@using FurniMPA101.App.ViewModels.Product
@model ProductCreateVM

    <form enctype="multipart/form-data" method="post" asp-action="Create" asp-controller="Product" style="width: 100%; margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;">
    <label for="Name"  style="display: block; margin-bottom: 8px; font-weight: bold;">Title:</label>
    <input type="text" asp-for=Name style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px;">
    <span asp-validation-for="Name"></span>


    <label for="Price" style="display: block; margin-bottom: 8px; font-weight: bold;">Price:</label>
    <input asp-for=Price type="number" style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px;">
        <span asp-validation-for="Price"></span>

    <label for="Image" style="display: block; margin-bottom: 8px; font-weight: bold;">Photo URL:</label>
    <input id="Image" asp-for=Image style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px;">
    <span asp-validation-for="Image"></span>

    <label for="ImageName" style="display: block; margin-bottom: 8px; font-weight: bold;">Image Name:</label>
    <input type="text" asp-for=ImageName style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px;">
    <span asp-validation-for="ImageName"></span>

    <button type="submit" style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer;">Submit</button>
 
        <a asp-action="Index" asp-controller="Product" style="text-decoration:none;text-align:center;color:white;margin:5px 30px;width:170px;background:orangered;border-radius:2px;font-size:20px;padding:5px 12px; cursor:pointer;">Cancel</a>
</form>