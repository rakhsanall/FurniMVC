@model Employee


<form method="post" asp-action="Create" asp-controller="Employee" style="width: 100%; margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;">
    <label for="Name" style="display: block; margin-bottom: 8px; font-weight: bold;">FirstName:</label>
    <input type="text" asp-for=FirstName required style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px;">
    <span asp-validation-for="FirstName"></span>

    <label for="Name" style="display: block; margin-bottom: 8px; font-weight: bold;">LastName:</label>
    <input type="text" asp-for=LastName required style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px;">
    <span asp-validation-for="LastName"></span>

    <label for="Name" style="display: block; margin-bottom: 8px; font-weight: bold;">Position:</label>
    <input type="text" asp-for=Position required style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px;">
    <span asp-validation-for="Position"></span>

    <label for="Name" style="display: block; margin-bottom: 8px; font-weight: bold;">Description:</label>
    <input type="text" asp-for=Description required style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px;">
    <span asp-validation-for="Description"></span>


    <label for="ImageUrl" style="display: block; margin-bottom: 8px; font-weight: bold;">Photo URL:</label>
    <input type="text" asp-for=ImageUrl style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px;">
    <span asp-validation-for="ImageUrl"></span>

    <label for="ImageName" style="display: block; margin-bottom: 8px; font-weight: bold;">Photo Name:</label>
    <input type="text" asp-for=ImageName style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px;">
    <span asp-validation-for="ImageName"></span>

    <button type="submit" style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer;">Submit</button>

    <a asp-action="Index" asp-controller="Employee" style="text-decoration:none;text-align:center;color:white;margin:5px 30px;width:170px;background:orangered;border-radius:2px;font-size:20px;padding:5px 12px; cursor:pointer;">Cancel</a>
</form>